{
    "name": "montague-street-bridge",
    "version": "1.0.0",
    "description": "How many days since the Monatague Street Bridge has been hit?",
    "scripts": {
        "watch:http": "npx live-server --watch=./dist/ --open=./dist/",
        "watch:tailwind": "npx tailwindcss -i ./src/tailwindcss/main.tailwind.css -o ./dist/assets/css/main.css --watch",
        "start": "npm-run-all --parallel watch:*",
        "build": "npx tailwindcss -i ./src/tailwindcss/main.tailwind.css -o ./dist/assets/css/main.css"
    },
    "dependencies": {
        "express": "^4.17.1",
        "lodash": "^4.17.21",
        "tailwindcss": "^3.2.4"
    },
    "devDependencies": {
        "jest": "^25.1.0",
        "live-server": "^1.2.2",
        "npm-run-all": "^4.1.5",
        "watch-http-server": "^0.7.6"
    }
}
